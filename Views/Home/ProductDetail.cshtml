@model QuanLyThietBiDienTu6.SANPHAM

@{
    ViewBag.Title = "ProductDetail";
}

<h2><b>Chi Tiết Sản Phẩm</b></h2>
<hr />


<div class="container">
    <div class="row">
        <div class="col-md-6" style="width: 500px; height:500px">
            <img style="max-width: 100%; max-height: 100%; object-fit: contain" src="~/Content/Images/@Html.DisplayFor(model => model.AnhSP)" alt="Hinh san pham" />
        </div>
        <div class="col-md-6">
            <h1>@Html.DisplayFor(model => model.TenSP)</h1>
            <h3 class="Money">Giá bán: <b>@Html.DisplayFor(model => model.Giaban) VNĐ</b></h3>
            <h3>Số lượng sản phẩm còn lại: @Html.DisplayFor(model => model.Soluongton)</h3>
            <i style="color:red">*Vui lòng đăng nhập để mua hàng</i>
            <div class="reviews">
                <h2>Đánh giá sản phẩm</h2>
                @{
                    int id = @ViewBag.Id;
                    QuanLyThietBiDienTu6.WebDienTuEntities da = new QuanLyThietBiDienTu6.WebDienTuEntities();
                    var dg = da.DanhGias.Where(d => d.MaSP == id).ToList();
                    <ul>
                        @foreach (var item in dg)
                        {
                            <hr />
                            <li>
                                <h4><strong>@item.KHACHHANG.HoTen</strong></h4>
                                <h4 style="color:orange">
                                    @for (int i = 0; i < @item.DiemDanhGia; i++)
                                    {
                                        <span class="glyphicon glyphicon-star"></span>
                                    }
                                    @for (int i = @item.DiemDanhGia; i < 5; i++)
                                    {
                                        <span class="glyphicon glyphicon-star-empty"></span>
                                    }
                                </h4>
                                <h4>Nhận xét: @item.NhanXet</h4>
                                <i>Vào lúc @item.NgayTao</i>
                            </li>

                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

<hr />

<div class="content">
    <div class="review">
        <h2><b>Đánh giá @Html.DisplayFor(model => model.TenSP)</b></h2>
        <i style="color:red">*Vui lòng đăng nhập để đánh giá</i>
    </div>
</div>



<p style="padding-top:20px">
    @Html.ActionLink("Back to List", "Index")
</p>
